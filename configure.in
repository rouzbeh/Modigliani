# Checks for header files.
AC_PATH_X
AC_FUNC_ALLOCA
AC_HEADER_DIRENT
AC_HEADER_STDC
AC_CHECK_HEADERS([OS.h fcntl.h fenv.h float.h inttypes.h limits.h malloc.h memory.h nl_types.h stddef.h stdint.h stdlib.h string.h sys/file.h sys/param.h sys/time.h unistd.h values.h wchar.h wctype.h])

# Checks for typedefs, structures, and compiler characteristics.
AC_HEADER_STDBOOL
AC_C_CONST
AC_C_INLINE
AC_TYPE_OFF_T
AC_TYPE_PID_T
AC_TYPE_SIZE_T
AC_HEADER_TIME
AC_STRUCT_TM
AC_C_VOLATILE
AC_CHECK_TYPES([ptrdiff_t])

# Checks for library functions.
AC_FUNC_CLOSEDIR_VOID
AC_FUNC_ERROR_AT_LINE
AC_FUNC_FORK
AC_FUNC_MALLOC
AC_FUNC_MEMCMP
AC_FUNC_REALLOC
AC_FUNC_SELECT_ARGTYPES
AC_TYPE_SIGNAL
AC_FUNC_STAT
AC_FUNC_STRFTIME
AC_FUNC_VPRINTF
AC_CHECK_FUNCS([alarm clock_gettime fesetround floor ftime getcwd gettimeofday memchr memmove memset pathconf pow regcomp rint select setlocale sqrt strchr strcspn strerror strpbrk strrchr strspn strstr strtol strtoul uname])

dnl CXXFLAGS="-g -O2 -ansi -pedantic -Wabi -Weffc++ -Wold-style-cast -Woverloaded-virtual"
CXXFLAGS="-Ofast -march=native"
dnl CXXFLAGS="-O3 -march=pentium4 -malign-double -fomit-frame-pointer -mfpmath=sse"
dnl CXXFLAGS="-O3 -malign-double -fomit-frame-pointer -ansi -pedantic "
dnl CXXFLAGS="-O3 -n32 "
dnl CXXFLAGS="-g -Wall -W -Wundef -Wshadow -Wpointer-arith -ansi -pedantic -fomit-frame-pointer"
dnl CXXFLAGS="-O2"

all_includes="$all_includes -I../ntsrc -I../nt3dsrc -I../ntgsrc -I../ntbpsrc -I.. -I../tnt"
all_includes="$all_includes $USER_INCLUDES"
AC_SUBST(all_includes)

all_libraries="$all_libraries $USER_LDFLAGS"
AC_SUBST(all_libraries)

AC_CONFIG_FILES([Makefile
                 nettrader/Makefile
                 nettrader/auxsrc/Makefile
                 nettrader/nt3dsrc/Makefile
                 nettrader/ntbpsrc/Makefile
                 nettrader/ntgsrc/Makefile
